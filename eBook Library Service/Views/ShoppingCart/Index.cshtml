@model eBook_Library_Service.Models.ShoppingCart

<h2>Shopping Cart</h2>

@if (Model.Items.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Book</th>
                <th>Quantity</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Book.Title</td>
                    <td>@item.Quantity</td>
                    <td>
                        <form asp-action="RemoveFromCart" method="post">
                            <input type="hidden" name="shoppingCartItemId" value="@item.ShoppingCartItemId" />
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <form asp-action="ClearCart" method="post">
        <button type="submit" class="btn btn-warning">Clear Cart</button>
    </form>
}
else
{
    <p>Your cart is empty.</p>
}

<!-- Add a "Back to Books" button -->
<div class="mt-3">
    <a href="http://localhost:5100/Book/UserIndex" class="btn btn-primary">Back to Books</a>
</div>