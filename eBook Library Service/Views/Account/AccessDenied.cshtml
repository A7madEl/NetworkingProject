@{
    ViewData["Title"] = "Access Denied";
}

<!-- Add custom CSS for modern styling -->
<style>
    .access-denied-container {
        max-width: 600px;
        margin: 100px auto;
        padding: 30px;
        border-radius: 10px;
        background: #ffffff;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        .access-denied-container h2 {
            font-size: 2rem;
            color: #dc3545; /* Bootstrap danger color */
            margin-bottom: 20px;
        }

        .access-denied-container p {
            font-size: 1.1rem;
            color: #6c757d; /* Bootstrap secondary color */
            margin-bottom: 20px;
        }

        .access-denied-container .btn-primary {
            background-color: #007bff; /* Bootstrap primary color */
            border: none;
            padding: 10px 20px;
            font-size: 1rem;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .access-denied-container .btn-primary:hover {
                background-color: #0056b3; /* Darker shade for hover effect */
            }

        .access-denied-container .btn-secondary {
            background-color: #6c757d; /* Bootstrap secondary color */
            border: none;
            padding: 10px 20px;
            font-size: 1rem;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

            .access-denied-container .btn-secondary:hover {
                background-color: #5a6268; /* Darker shade for hover effect */
            }

        .access-denied-container .return-url {
            font-weight: bold;
            color: #343a40; /* Bootstrap dark color */
            margin-top: 15px;
        }

        .access-denied-container .icon {
            font-size: 4rem;
            color: #dc3545; /* Bootstrap danger color */
            margin-bottom: 20px;
        }

    .footer {
        margin-top: 40px;
        font-size: 0.9rem;
        color: #6c757d; /* Bootstrap secondary color */
    }

        .footer a {
            color: #007bff; /* Bootstrap primary color */
            text-decoration: none;
        }

            .footer a:hover {
                text-decoration: underline;
            }
</style>

<div class="access-denied-container">
    <!-- Icon or Illustration -->
    <div class="icon">
        <i class="fas fa-ban"></i> <!-- Font Awesome ban icon -->
    </div>

    <h2>Access Denied</h2>
    <p>@TempData["ErrorMessage"]</p>
    <p>You do not have permission to access this page. Please contact the administrator if you believe this is an error.</p>

    @if (!string.IsNullOrEmpty(ViewBag.ReturnUrl))
    {
        <p class="return-url">You were trying to access: <strong>@ViewBag.ReturnUrl</strong></p>
    }

    <!-- Buttons -->
    <div class="mt-4">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Return to Home</a>
        <a href="mailto:admin@ebooklibrary.com" class="btn btn-secondary ml-2">Contact Administrator</a>
    </div>

    <!-- Footer -->
    <div class="footer mt-4">
        <p>Need help? <a href="/Home/Contact">Contact Support</a></p>
        <p>&copy; @DateTime.Now.Year eBook Library Service. All rights reserved.</p>
    </div>
</div>

<!-- Add Font Awesome for icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">